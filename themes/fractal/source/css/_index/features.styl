.sec
    &-style1
        background-color: #fbfbfb
        color: #999999
        text-align: center
    padding: 4.5em 0 2.5em 0
    background-color: #ffffff
    border-bottom: solid 2px #eeeeee
    +desktop-down()
        padding: 2em 1em 0.1em 1em
    &-inner
        margin-left: auto
        margin-right: auto
        max-width: 50em
    &-hd
        margin: 0 0 2.5em 0
        text-align: center
        &:after
            border-bottom: solid 2px #e6e6e6
            display: block
            width: 4em
            margin: 2em auto 0 auto
            content: ' '
    &-stit
        font-size: 1.25em
        +tablet-down()
            font-size: 1em

.features
    padding-bottom: 4.5em

.brands
    margin: 0.8em 0

.alter
    display: flex
    align-items: center
    text-align: left
    +mobile()
        flex-direction: column !important
    &-hd
        vhc-wrap()
    &-bd
        flex: 1
        > :last-child
            margin-bottom: 0
        +mobile()
            text-align: center !important
    
.spotlight
    @extend .alter
    border-top: solid 2px #eeeeee
    padding-top: 3em
    margin: 3em 0 0 0
    &:first-child
        border-top: 0
        margin-top: 0
        padding-top: 0
    &-hd
        width: 140px
        height: 140px
        box-shadow: 0 0 0 4px #ffffff, 0 0 0 5px #e6e6e6
        border-radius: 100%
        margin: 0 3em 0 0
        overflow: hidden
        +mobile()
            margin: 0 0 2em !important
        img
            transition: all .3s ease
            max-width: 120px
        a
            border-bottom: none
            &:hover
                img
                    transform: scale(0.95)
    &-bd
        h3
            margin-top: 0

.copyrights
    padding-bottom: 270px
    background-image: url('../img/green.png')
    background-repeat: no-repeat
    background-position: center bottom
    border-bottom: none
    