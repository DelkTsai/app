@import "features"

.banner
    .actions .btn:focus
        color: inherit
    .banner-desc .banner-link:visited
        color: #fff
    background-color: $banner-bg
    color: $banner-color
    padding: 4.5em 0 2.5em 0
    background-image: linear-gradient(-180deg, #3B3C40 0%, #434D63 100%)
    background-position: top left, center center
    background-attachment: fixed, fixed
    background-size: auto, cover
    height: 100vh
    min-height: 35em
    vhc-wrap()
    &-link
        border-bottom-color: rgba(255, 255, 255, 0.5)
        color: #ffffff
        &:hover
            color: #fefefe
    p
        font-size: 1.5em
        line-height: 1.35em
        +desktop-down()
            font-size: 1.2em
            line-height: normal
        +tablet-down()
            font-size: 1em
    h1
        font-size: 3.25em
        margin-bottom: 0.5em
        +desktop-down()
            font-size: 2em
            margin-top: 0
        +tablet-down()
            font-size: 1.8em
    &-desc
        margin-bottom: 1.5em
    .content
        opacity: 0
        transform: translateX(-20px)
        transition: opacity 0.5s ease, transform 1s ease
        .banner-desc
            font-size: 85%
        .loaded &
            transform: translateX(0)
            opacity: 1
        text-align: right
        margin: -3.5em 4em 0 0
        > :last-child
            margin-bottom: 0
        +mq-max(1060px)
            margin-right: 2em
        +desktop-down()
            margin: 0 0 2em 0
            text-align: center
    .image
        transition: opacity 1s ease, transform 1s ease
        transform: translateY(20px)
        opacity: 0
        .loaded &
            transform: translateY(0)
            opacity: 1
        img
            opacity: 0
            transition: opacity 0.75s ease
            transition-delay: 0.75s
            .loaded &
                opacity: 1
    .phones
        img:nth-child(1)
            animation: slide_from_top 4s
            width: 167px
            vertical-align: bottom
            margin-right: 8px
        img:nth-child(2)
            animation: slide_from_bottom 4s
            width: 197px
        @keyframes slide_from_top
            0%
                transform: translateY(500px)
            100%
                transform: translateY(0px)
        @keyframes slide_from_bottom
            0%
                transform: translateY(-500px)
            100%
                transform: translateY(0px)
    .actions
        margin-top: 1.5em
    +desktop-large-down()
        font-size: 14px
    +desktop-xlarge-up()
        font-size: 18px
    +desktop-down()
        flex-direction: column-reverse
        padding: 2em 1em 0.1em 1em
    +mobile()
        height: auto
        min-height: 0

.phone
    margin: 0 4em 3em 0
    width: 13em
    +mq-max(1060px)
        margin-right: 2em
    +desktop-down()
        margin-right: 0
    +mobile()
        font-size: 0.8em
        max-width: 60vw
    img
        display: block
        position: relative
        width: 100%
    .inner, &:before, &:after
        display: block
        border: solid 2px rgba(255, 255, 255, 0.25)
    .inner
        position: relative
        &:before, &:after
            content: ''
            position: absolute
            left: 50%
        &:before
            top: -1.375em
            margin-left: -1em
            width: 2em
            height: 0.25em
            border-radius: 0.5em
            background: rgba(255, 255, 255, 0.25)
        &:after
            bottom: -2.75em
            margin-left: -1em
            width: 2em
            height: 2em
            border-radius: 100%
            border: solid 2px rgba(255, 255, 255, 0.25)
    &:before, &:after
        content: ''
    &:before
        height: 2.5em
        border-radius: 1em 1em 0 0
        border-bottom: 0
    &:after
        height: 3.5em
        border-radius: 0 0 1em 1em
        border-top: 0

.qrcode-ios
    margin: 0 0 0 auto
    position: relative
    top: 120px
    width: 140px
    height: 140px
    // border-radius: 100%
    overflow: hidden
    text-align: center
    // border: 1px solid rgba(255,255,255,0.25)
