.icon-list
    cursor: default
    list-style: none
    padding-left: 0
    margin-bottom: 2em
    font-size: 1.2em
    text-align: center
    +tablet-down()
        font-size: 1em
    li
        display: inline-block
        padding: 0 0.8em 0
        margin: 0.8em 0
    .icon-item
        vhc-wrap(flex-start)
    .icon-wrap
        color: #e0e0e0
        font-size: 14px
        margin-right: 0.5em
        width: 30px
        height: 30px
        line-height: 30px
        border: 1px solid #eee
        border-radius: 50%
    .label
        display: inline-block
        vertical-align: middle
        color: $color-grey